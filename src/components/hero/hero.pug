section.hero
  .container.hero__container
    .hero__content
      h1.hero__title Be The Fastest In Delivery Your #[span Food]
      p.hero__description.
        Lorem ipsum dolor sit amet, consectetur adipiscing elit ut aliquam, purus sit amet
      a.button.button--primary(href="#!") Get Started

    .hero__images
      picture.hero__image.hero__image--big
        source(srcset="images/hero/food-1.avif 1x, images/hero/food-1@2x.avif 2x" type="image/avif")
        source(srcset="images/hero/food-1.webp 1x, images/hero/food-1@2x.webp 2x" type="image/webp")
        img(src="images/hero/food-1.jpg" srcset="images/hero/food-1@2x.jpg 2x" width="343" height="338" alt="Food 1")
      picture.hero__image.hero__image--medium
        source(srcset="images/hero/food-2.avif 1x, images/hero/food-2@2x.avif 2x" type="image/avif")
        source(srcset="images/hero/food-2.webp 1x, images/hero/food-2@2x.webp 2x" type="image/webp")
        img(src="images/hero/food-2.jpg" srcset="images/hero/food-2@2x.jpg 2x" width="275" height="262" alt="Food 2")
      picture.hero__image.hero__image--small
        source(srcset="images/hero/food-3.avif 1x, images/hero/food-3@2x.avif 2x" type="image/avif")
        source(srcset="images/hero/food-3.webp 1x, images/hero/food-3@2x.webp 2x" type="image/webp")
        img(src="images/hero/food-3.jpg" srcset="images/hero/food-3@2x.jpg 2x" width="202" height="200" alt="Food 3")
